{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "commonjs",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"strictNullChecks": true
	},
	"include": ["src"],
	"exclude": [
		"postcss.config.js"
	]
}
