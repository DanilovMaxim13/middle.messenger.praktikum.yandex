{
  "name": "messenger.praktukum.yandex",
  "version": "1.0.0",
  "type": "module",
  "author": {
    "name": "Danilov Maxim"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite build && node server.cjs",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:style": "stylelint \"**/*.pcss\"",
    "lint:style:fix": "stylelint \"**/*.pcss\" --fix",
    "check-format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,html}\"",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.0.1",
    "handlebars-jest": "^1.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.0",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-order": "^6.0.4",
    "ts-jest": "^29.2.6",
    "typescript": "^5.7.3",
    "vite": "^4.5.5"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.1.1",
    "uuid": "^11.0.5"
  },
  "engines": {
    "node": "22.11.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.hbs$": "<rootDir>/node_modules/handlebars-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/public/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test eslint stylelint"
    }
  }
}
