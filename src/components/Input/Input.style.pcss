.input {
    border: unset;
    border-bottom: 1px solid var(--secondary-color);
	color: inherit;
    font-size: 16px;
    outline: none;
    padding: 0 0 3px;
    width: 100%;

    &:focus + .label {
        font-size: 12px;
        top: 0;
    }

    &:not(:placeholder-shown) + .label {
        font-size: 12px;
        top: 0;
    }
}
