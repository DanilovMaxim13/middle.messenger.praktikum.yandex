.chat-card {
	align-items: center;
	border-bottom: 1px solid #EAEAEA;
	cursor: pointer;
	display: flex;
	gap: 20px;
	height: 70px;
	margin: -1px;
	padding: 10px;

	&:first-child {
		border-top: 1px solid #EAEAEA;
	}

	&__avatar {
		height: 50px;
		padding: 10px;
		width: 50px;
	}

	&__info {
		display: flex;
		flex-direction: column;
		gap: 5px;
		height: 100%;
		justify-content: flex-start;
	}

	&__name {
		font-size: 14px;
		font-weight: 600;
	}

	&__last-message {
		color: #999;
		font-size: 12px;
	}

	&.active {
		background-color: #E4EDFD;
	}

	&:hover {
		background-color: #EAEAEA;
	}
}
