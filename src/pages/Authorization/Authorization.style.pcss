.auth-section {
    width: 350px;
    padding: 40px 30px;

    display: flex;
    flex-direction: column;
    align-items: center;

    background-color: var(--primaryBackgroundColor);
    border-radius: 20px;
    box-shadow: 0 0 6px 0 var(--borderShadow);

    &__title.heading {
        margin-bottom: 20px;
    }

    &__form {
        width: 100%;
    }

    &__submit-button {
        margin: 50px 0 10px;
    }
}
